<Window x:Class="WPProcinal.Forms.frmStoryBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPProcinal.Forms"
        mc:Ignorable="d"
        
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="frmStoryBoard" Height="900" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/NewDesing/backgrounds/p-fondo-pay.jpg"
                        Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <MediaElement Height="900" 
                      Width="500" Grid.Row="1"
                      Name="MEVideo"
                      MediaEnded="MediaElement_MediaEnded"/>
        <Image Source="/Images/salir2.png" 
               Grid.Row="0" 
               Width="200" 
               Height="100" 
               Stretch="Uniform" 
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom" 
               TouchDown="Image_TouchDown"/>
    </Grid>
</Window>
