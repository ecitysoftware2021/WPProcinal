<Window x:Class="WPProcinal.Forms.ModalBioseguridad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPProcinal.Forms"
        mc:Ignorable="d"
        Title="ModalBioseguridad"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Top="140"
        ShowInTaskbar="False" 
        Height="900" 
        Width="700">
    <Border 
            BorderBrush="Transparent" 
            BorderThickness="3,3,3,3"
            CornerRadius="20,20,20,20">
        <Border.Background>
            <ImageBrush ImageSource="/Images/modalBioseguridad.jpeg"
                        Stretch="Fill"/>
        </Border.Background>
        <Grid>

            <Image HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Width="360"
                       Margin="0,0,0,0"
                       Opacity="1"
                       Stretch="Uniform"
                       Grid.Row="2"
                       TouchDown="Image_TouchDown"
                       Source="../Images/buttons/btnAcepto.jpg"
                    />
        </Grid>
    </Border>
</Window>
